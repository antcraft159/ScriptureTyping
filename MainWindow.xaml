<Window x:Class="ScriptureTyping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ScriptureTyping.ViewModels"
        xmlns:views="clr-namespace:ScriptureTyping.Views"
        Width="1280"
        Height="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Brush.Bg}">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="34"/>
        </Grid.RowDefinitions>

        <!-- TopBar -->
        <Border Grid.Row="0" Background="{StaticResource Brush.Surface}" Padding="14,10">
            <DockPanel>
                <TextBlock Text="{Binding Title}"
                           Foreground="{StaticResource Brush.Text}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock DockPanel.Dock="Right"
                           Text="{Binding StatusMessage}"
                           Foreground="{StaticResource Brush.Muted}"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- 메인 영역: 메뉴 고정 -->
        <Grid Grid.Row="1" Background="{StaticResource Brush.Bg}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 메뉴 바 -->
            <views:MainMenu Grid.Column="0"
                            DataContext="{Binding MenuViewModel}"/>

            <!-- 여기만 화면 전환 -->
            <ContentControl Grid.Column="1"
                            Content="{Binding CurrentContentViewModel}"/>
        </Grid>

        <!-- StatusBar -->
        <Border Grid.Row="2" Background="{StaticResource Brush.Surface}" Padding="14,6">
            <TextBlock Text="{Binding FooterRight}"
                       Foreground="{StaticResource Brush.Muted}"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>