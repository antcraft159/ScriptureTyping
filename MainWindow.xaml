<!-- 파일명: MainWindow.xaml -->
<Window x:Class="ScriptureTyping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ScriptureTyping.ViewModels"
        xmlns:views="clr-namespace:ScriptureTyping.Views"
        Width="1280"
        Height="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Brush.Bg}">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="34"/>
        </Grid.RowDefinitions>

        <!-- TopBar -->
        <Border Grid.Row="0"
                Background="{StaticResource Brush.Surface}"
                Padding="14,10">
            <DockPanel>
                <TextBlock Text="{Binding Title}"
                           Foreground="{StaticResource Brush.Text}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock DockPanel.Dock="Right"
                           Text="{Binding StatusMessage}"
                           Foreground="{StaticResource Brush.Muted}"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Main: 콘텐츠는 오른쪽으로 "손잡이 폭만큼"만 밀고, 메뉴는 오버레이 -->
        <Grid Grid.Row="1"
              Background="{StaticResource Brush.Bg}"
              ClipToBounds="False">

            <!-- ✅ 화면 전환 콘텐츠: MENU 손잡이(피크) 폭만큼만 안전 여백 확보 -->
            <ContentControl Content="{Binding CurrentContentViewModel}"
                            Margin="{StaticResource Layout.MenuPeekMargin}"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"/>

            <!-- 메뉴: 항상 위로 덮어서 -->
            <views:MainMenu DataContext="{Binding MenuViewModel}"
                            Panel.ZIndex="300"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch"/>
        </Grid>

        <!-- StatusBar -->
        <Border Grid.Row="2"
                Background="{StaticResource Brush.Surface}"
                Padding="14,6">
            <TextBlock Text="{Binding FooterRight}"
                       Foreground="{StaticResource Brush.Muted}"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
