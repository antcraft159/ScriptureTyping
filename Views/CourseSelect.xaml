<UserControl x:Class="ScriptureTyping.Views.CourseSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource Brush.Bg}"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             ClipToBounds="False">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.84"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="Transparent">

        <Border Padding="24"
                Margin="{StaticResource Layout.MenuSafeMargin}"
                Background="Transparent">

            <Grid HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="{StaticResource Brush.Surface}"
                        BorderBrush="{StaticResource Brush.Border}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="14"
                        HorizontalAlignment="Stretch">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="과정/일차"
                                   Foreground="{StaticResource Brush.Text2}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <Grid Grid.Column="1">
                            <ComboBox ItemsSource="{Binding Courses}"
                                      SelectedItem="{Binding SelectedCourse, Mode=TwoWay}"
                                      Height="32"
                                      MinWidth="70"/>

                            <TextBlock Text="선택"
                                       Foreground="{StaticResource Brush.Text2}"
                                       VerticalAlignment="Center"
                                       Margin="10,0,28,0"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedCourse}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedCourse}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <Grid Grid.Column="4">
                            <ComboBox ItemsSource="{Binding Days}"
                                      SelectedItem="{Binding SelectedDay, Mode=TwoWay}"
                                      Height="32"
                                      MinWidth="70"/>

                            <TextBlock Text="선택"
                                       Foreground="{StaticResource Brush.Text2}"
                                       VerticalAlignment="Center"
                                       Margin="10,0,28,0"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedDay}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedDay}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <Grid Grid.Column="5"
                              Margin="18,7,0,0"
                              VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Foreground="{StaticResource Brush.Text2}"
                                       TextWrapping="Wrap">
                                <Run Text="선택된 과정/일차: "/>
                                <Run Text="{Binding SelectedCourse}"/>
                                <Run Text=" / "/>
                                <Run Text="{Binding SelectedDay}"/>
                            </TextBlock>

                            <TextBlock Grid.Column="2"
                                       Text="{Binding CourseErrorMessage}"
                                       Foreground="#EF4444"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       TextWrapping="NoWrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CourseErrorMessage}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CourseErrorMessage}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <Button Grid.Column="6"
                                Content="학습 시작"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding StartLearningCommand}"/>
                    </Grid>
                </Border>

                <!-- 본문 -->
                <Border Grid.Row="2"
                        Background="{StaticResource Brush.Surface}"
                        BorderBrush="{StaticResource Brush.Border}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="18"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="220"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 구절 -->
                        <Border Grid.Row="0"
                                Background="{StaticResource Brush.Bg}"
                                BorderBrush="{StaticResource Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="{Binding Typing.CurrentVerseRef}"
                                           Foreground="{StaticResource Brush.Text2}"
                                           FontSize="13"
                                           Margin="0,0,0,6"/>
                                <TextBlock Text="{Binding Typing.CurrentVerseText}"
                                           Foreground="{StaticResource Brush.Text}"
                                           FontSize="16"
                                           TextWrapping="Wrap"
                                           LineHeight="24"/>
                            </StackPanel>
                        </Border>

                        <!-- 입력 -->
                        <Border Grid.Row="2"
                                Background="{StaticResource Brush.Bg}"
                                BorderBrush="{StaticResource Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12">
                            <Grid>
                                <TextBlock Text="여기에 타이핑하세요…"
                                           Foreground="{StaticResource Brush.Text2}"
                                           IsHitTestVisible="False"
                                           Margin="8,6,0,0"
                                           VerticalAlignment="Top">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Typing.UserTypedText}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Typing.UserTypedText}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBox Text="{Binding Typing.UserTypedText, UpdateSourceTrigger=PropertyChanged}"
                                         Foreground="{StaticResource Brush.Text}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="16"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         SpellCheck.IsEnabled="False"
                                         Padding="6,4,6,4"
                                         IsReadOnly="{Binding Typing.IsTypingLocked}"/>
                            </Grid>
                        </Border>

                        <!-- 다음 구절 -->
                        <StackPanel Grid.Row="4"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Content="다음 구절"
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding Typing.NextVerseCommand}"/>
                        </StackPanel>

                        <!-- ✅ 통계 -->
                        <Border Grid.Row="6"
                                Background="{StaticResource Brush.Bg}"
                                BorderBrush="{StaticResource Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12"
                                Visibility="{Binding Typing.IsStatsVisible, Converter={StaticResource BoolToVis}}">
                            <StackPanel>
                                <TextBlock Text="결과"
                                           Foreground="{StaticResource Brush.Text}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,6"/>

                                <TextBlock Text="{Binding Typing.StatsSummary}"
                                           Foreground="{StaticResource Brush.Text2}"
                                           FontSize="13"
                                           Margin="0,0,0,10"/>

                                <ItemsControl ItemsSource="{Binding Typing.Results}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="8"
                                                    Margin="0,0,0,6"
                                                    CornerRadius="6"
                                                    Background="#0FFFFFFF">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Ref}"
                                                               Foreground="{StaticResource Brush.Text2}"
                                                               FontSize="12"/>

                                                    <TextBlock Text="{Binding Expected}"
                                                               Foreground="{StaticResource Brush.Text}"
                                                               TextWrapping="Wrap"
                                                               Margin="0,4,0,0"/>

                                                    <!-- 오답일 때만 입력값 표시 -->
                                                    <TextBlock Text="{Binding Typed}"
                                                               Foreground="#EF4444"
                                                               TextWrapping="Wrap"
                                                               Margin="0,4,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsCorrect}" Value="False">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </ScrollViewer>
</UserControl>
