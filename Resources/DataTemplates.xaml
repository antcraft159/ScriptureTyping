<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:ScriptureTyping.ViewModels"
                    xmlns:v="clr-namespace:ScriptureTyping.Views">

    <DataTemplate DataType="{x:Type vm:MainMenuViewModel}">
        <v:MainMenu/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CourseSelectViewModel}">
        <v:CourseSelect/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:PlaceholderViewModel}">
        <Grid Margin="24" Background="{StaticResource Brush.Bg}">
            <Border Background="{StaticResource Brush.Surface}"
                    BorderBrush="{StaticResource Brush.Border}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="18">
                <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               Foreground="{StaticResource Brush.Text}"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Message}"
                               Foreground="{StaticResource Brush.Text2}"
                               FontSize="14"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
    </DataTemplate>

</ResourceDictionary>
